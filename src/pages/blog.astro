---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '../components/Nav/index.jsx';
import PortfolioPreview from '../components/PortfolioPreview/index.jsx';

interface MarkdownFrontmatter {
	publishDate: number;
}

const articles = Astro.fetchContent<MarkdownFrontmatter>('./article/**/*.md')
	.filter(({ publishDate }) => !!publishDate)
	.sort((a, b) => new Date(b.publishDate).valueOf() - new Date(a.publishDate).valueOf());
---

<html lang="en">
	<head>
		<MainHead title="All Projects | Jeanine White" description="Learn about Jenine White's most recent projects" />
		<style lang="scss">
			.grid {
				display: grid;
				grid-gap: 3rem;
			}
		</style>
	</head>
	<body>
		<Nav client:load/>
		<div class="wrapper">
			<h1 class="title mt4 mb4">All Projects</h1>
			<div class="grid">
				{articles.map((article) => <PortfolioPreview project={article} />)}
			</div>
		</div>
		<Footer />
	</body>
</html>
